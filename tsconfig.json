{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/global.d.ts", // ✅ `src/` 내부에 있는 `global.d.ts` 포함
    "src/**/*.ts" // ✅ `src/` 내부의 모든 TypeScript 파일 포함
  ],
  "exclude": [
    "node_modules",
    "dist",
    "uploads" // ✅ 업로드된 파일 저장소는 TypeScript와 무관하므로 제외
  ]
}
